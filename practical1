//Write a recursive and non-recursive program to calculate Fibonacci numbers and analyze their time complexity
import java.util.Scanner;

public class fib {

    // Method to compute nth Fibonacci number iteratively
    public static int fibonacci(int n) {
        if (n <= 1) return n;

        int prev = 0, curr = 1;
        for (int i = 2; i <= n; i++) {
            int next = prev + curr;
            prev = curr;
            curr = next;
        }
        return curr;
    }

public static int recfibonacci(int n) {
        if (n ==0 || n ==1){ 
            return n;
        }
        int fib1 = recfibonacci(n-1);
        int fib2 = recfibonacci(n-2);
        int fibn = fib1 + fib2;
        return fibn;
    }
        

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter the value of n: ");
        int n = scanner.nextInt();

        int result = fibonacci(n);
        int resultRec = recfibonacci(n);
        System.out.println("The " + n + "th Fibonacci number using itrative method is: " + result);
        System.out.println("The " + n + "th Fibonacci number using recursive method is: " + resultRec);

        scanner.close();
    }
}
